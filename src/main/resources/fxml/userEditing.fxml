<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="userEditingBorderPane" maxHeight="260.0" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="260.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ua.rozhkov.UsersListing.controller.UserEditingController">
    <center>
        <Pane BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="firstNameLabel" text="First name:">
                            <padding>
                                <Insets right="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets top="3.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="firstNameEdit" prefWidth="155.0" promptText="Enter user first name here"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="15.0" right="45.0" top="15.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutY="30.0" prefHeight="30.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="lastNameLabel" text="Last name:">
                            <padding>
                                <Insets right="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets top="3.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="lastNameEdit" prefWidth="155.0" promptText="Enter user last name here"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="15.0" right="45.0" top="15.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutY="60.0" prefHeight="30.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="salaryLabel" text="Salary:">
                            <padding>
                                <Insets right="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets top="3.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="salaryEdit" prefWidth="155.0" promptText="Enter user salary here"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="15.0" right="45.0" top="15.0"/>
                    </padding>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutY="90.0" prefHeight="30.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="ageLabel" text="Age:">
                            <padding>
                                <Insets right="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets top="3.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="ageEdit" prefWidth="155.0" promptText="Enter user age here"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="15.0" right="45.0" top="15.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutY="120.0" prefHeight="30.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="dateOfBirthLabel" text="Birth date:">
                            <padding>
                                <Insets right="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets top="3.0"/>
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="dateOfBirthDatePicker" prefWidth="155.0"
                                    promptText="Choose birth date here"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="15.0" right="45.0" top="15.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" fillHeight="false" layoutY="165.0" prefHeight="50.0" prefWidth="300.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonClick" prefWidth="60.0"
                                text="Save">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="11.0"/>
                            </font>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClick"
                                prefWidth="60.0" text="Cancel">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </Button>
                    </children>
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </Pane>
    </center>
    <top>
        <VBox alignment="CENTER" maxHeight="50.0" prefHeight="50.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="User information edit" textAlignment="CENTER">
                    <font>
                        <Font name="Arial Black" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="editModeLabel" maxHeight="20.0" prefHeight="20.0" text="EditMode" textAlignment="CENTER"
                       textOverrun="CLIP" wrapText="true" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
</BorderPane>
